<style>
.enquiry-section {
  background: linear-gradient(to right, #f8f9fa, #eef1f5);
  padding: 60px 0;
}

.enquiry-card {
  border: none;
  border-radius: 15px;
}

.card-header {
  background: #0d6efd;
  color: #fff;
  border-radius: 15px 15px 0 0;
}

.form-control {
  border-radius: 10px;
}

.form-control:focus {
  box-shadow: none;
  border-color: #0d6efd;
}

.submit-btn {
  border-radius: 25px;
  padding: 10px;
  font-weight: bold;
}

.submit-btn:hover {
  background: #084298;
}
</style>




<div class="enquiry-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card enquiry-card shadow-lg">
          <div class="card-header text-center">
            <h4>ðŸ“š Book Enquiry Form</h4>
            <p class="small">Request your favorite book online</p>
          </div>

          <div class="card-body">

            <form action="/save_form" method="post">

              <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name">
              </div>

              <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input type="email" name="email" class="form-control" placeholder="Enter your email">
              </div>

              <div class="mb-3">
                <label class="form-label">Mobile Number</label>
                <input type="tel" name="mobile" class="form-control" placeholder="Enter mobile number">
              </div>

              <div class="mb-3">
                <label class="form-label">Book Name</label>
                <input type="text" name="book_name"class="form-control" placeholder="Book title">
              </div>

              <div class="mb-3">
                <label class="form-label">Author Name</label>
                <input type="text"name="author_name" class="form-control" placeholder="Author name">
              </div>

              <div class="mb-3">
                <label class="form-label">Message</label>
                <textarea name="message"class="form-control" rows="3" placeholder="Your message"></textarea>
              </div>

              <div class="d-grid">
                <button class="btn btn-primary submit-btn" onclick="popup()">
                  Send Enquiry
                </button>
              </div>

            </form>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  function popup(){
    alert("your inquiry is save")
  }

</script>



