<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #667eea, #764ba2);
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-card {
      width: 100%;
      max-width: 400px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    .login-card h3 {
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="card login-card p-4">
    <div class="text-center mb-3">
      <h3>Admin Login</h3>
      <p class="text-muted">Login to Admin Panel</p>
    </div>

    <form  action="/admin/save_login" method="post">
      <!-- Email -->
      <div class="mb-3">
        <label class="form-label">Admin Email</label>
        <input type="email" name="email" class="form-control" placeholder="Enter admin email" required>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Enter password" required>
      </div>

      <!-- Login Button -->
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">
          Login
        </button>
        <a href="admin/register"> GO to register</a>
      </div>
    </form>

  </div>

</body>
</html>
